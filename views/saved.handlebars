<div class="contain">
  <img src="/images/bnews.jpg" alt="news">
  <div class="center">
    <h1 id="title">Saved Articles</h1>
    <h2 id="title2" class="mt-3 text-center">Your Saved Articles</h2>
  </div>
</div>

{{#each article}}
{{#if saved}}
<div class="card mt-4 mr-5 ml-5 mb-4 border border-primary cardPrime">
  <h3 class="card-header bg-warning" id="articleHeader"><a href={{this.link}}>{{this.headline}}</a><button data-id="{{this._id}}" class="float-right btn btn-danger" id="delete">Delete Article From Saved</button><button data-id="{{this._id}}" class="float-right mr-5 btn btn-primary" data-toggle="modal" data-target="#exampleModal{{this._id}}" id="add">Add A Note</button></h3>
  <div class="card-body">
    <p class="card-text" id="articleSummary">{{this.summary}}</p>
  </div>
</div>
{{/if}}

<div class="modal fade" id="exampleModal{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Notes for Article #{{this._id}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="card" id="modalCard">
        <div id="notes{{this._id}}" class="card-body text-center font-weight-bold">No notes for this article!</div>
        </div>
        <form class="mt-5">
          New Note:<br>
          <textarea name="message" rows="10" cols="62" id="bodyinput{{this._id}}"></textarea>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="savenote" data-id="{{this._id}}">Save note</button>
      </div>
    </div>
  </div>
</div>
{{/each}}